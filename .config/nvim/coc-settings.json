{
    "cSpellExt.enableDictionaries" : ["italian"],
    "cSpell.language": "en-US,en-GB,it",
    "cSpell.maxNumberOfProblems": 100,
    "cSpell.numSuggestion": 8,

    "cSpell.userWords": [
      "Molinaro",
      "mhsalvor"
    ],

    "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  }
}
