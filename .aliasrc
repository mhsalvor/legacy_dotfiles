#
## extract - archive extractor
## usage: extract <file>
function extract()
{
  if [ -f $1 ] ; then
	# display usage if no paramaters given
	echo "Usage: extract <path/file_name_1> [path/file_name_2] ..."
	return 1
  else
     for n in $@
     do
	if [ -f "$n" ] ; then
	   case "${n%,}" in
		*.tar.bz2)	tar xjf "$n" ;;
		*.tar.gz)	tar xfz "$n" ;;
		*.tar.xz)	tar xvf "$n" ;;
		*.tar)		tar xvf "$n" ;;
		*.lzma)		unlzma ./"$n" ;;
		*.bz2)		bunzip2 ./"$n" ;;
		*.rar)		unrar x -ad ./"$n" ;;
		*.gz)		gunzip  ./"$n" ;;
		*.tbz2)		tar xjf "$n" ;;
		*.tgz)		tar xzf "$n" ;;
		*.txz)		tar xvf "$n" ;;
		*.zip)		unzip ./"$n" ;;
		*.7z)		7z x ./"$n" ;;
		*.arj)		7z x ./"$n" ;;
		*.cab)		7z x ./"$n" ;;
		*.chm)		7z x ./"$n" ;;
		*.deb)		ar x ./"$n" ;;
		*.dmg)		7z x ./"$n" ;;
		*.iso)		7z x ./"$n" ;;
		*.lzh)		7z x ./"$n" ;;
		*.msi)		7z x ./"$n" ;;
		*.rpm)		7z x ./"$n" ;;
		*.udf)		7z x ./"$n" ;;
		*.wim)		7z x ./"$n" ;;
		*.xar)		7z x ./"$n" ;;
		*.xz)		unxz ./"$n" ;;
		*.exe)		cabextract ./"$n" ;;
		*.z)		uncompress ./"$n" ;;
		*.Z)		uncompress ./"$n" ;;
		*)		echo "extract: '$n' -  unknown archive method"
		       		return 1
				;;
	  esac
     else
	echo "'$n' - is not a valid file or does not exist."
	return 1
     fi
   done
 fi
}
