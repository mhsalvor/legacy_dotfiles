#
## lsarch - view archive content without extracting it
## usage: lsarch <archive>
##
function lsarch()
{
	if [ -f $1 ]; then
		case $1 in
			*.tar.gz)	gunzip -c $1 | tar -tf - -- ;;
			*.tar)		tar -tf $1 ;;
			*.tgz)		tar -ztf $1 ;;
			*.zip)		unzip -l $1 ;;
			*)		echo "lsarch: '$1' Error. Cannot read archive" ;;
		esac
	else
		echo "lsarch: '$1' is not a valid archive"
	fi
}
